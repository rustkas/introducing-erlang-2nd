{erl_opts, [debug_info]}.
{deps, []}.

{relx, [{release, {ex12_factorial_up, "0.1.0"},
         [ex12_factorial_up,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.

{plugins, [rebar3_format]}.

{format, [
    {files, ["lib/factorial_up/src/*.?rl"]},
    {formatter, otp_formatter},
    {options, #{paper => 80}}    
]}.